/* 页面容器样式 */
page {
  --td-brand-color: #07c160;
  --td-brand-color-light: #e0f2e9;
  --td-text-color-primary: #333;
  --td-text-color-secondary: #666;
  --td-filter-inclusive-color: #07c160;
  --td-filter-inclusive-bg: #e0f2e9;
  --td-filter-exclusive-color: #ff9800;
  --td-filter-exclusive-bg: #fff4e5;
  height: 100%;
  width: 100vw;
  overflow: hidden;
  box-sizing: border-box;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
  position: relative; /* 为遮罩层添加相对定位 */
}

/* 遮罩层样式 */
.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 90;
}

/* 头部区域 - 默认高度10vh */
.header-section {
  width: 100%;
  flex-shrink: 0;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
  transition: height 0.3s ease;
  overflow: hidden;
  height: auto;
  max-height: 25vh;
}

.header-section.expanded {
  height: auto; /* 展开时的高度 */
}

.header-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
}

.back-link {
  display: flex;
  align-items: center;
}

.back-arrow {
  color: var(--td-text-color-primary);
}

.header-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
  color: var(--td-text-color-primary);
  padding: 0 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.expand-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-right: 30rpx;
}

/* 筛选器区域 */
.filter-container {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.filter-category {
  margin-bottom: 20rpx;
}

.filter-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.filter-category-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--td-text-color-primary);
  white-space: nowrap;
  margin-right: 12rpx;
}

.filter-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 10rpx;
  flex: 1;
}

.filter-item {
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  transition: all 0.2s ease;
}

/* Inclusive筛选器样式 */
.filter-item.inclusive {
  background-color: #f5f5f5;
  color: var(--td-text-color-secondary);
}

.filter-item.inclusive.active {
  background-color: var(--td-filter-inclusive-bg);
  color: var(--td-filter-inclusive-color);
  font-weight: 500;
}

/* Exclusive筛选器样式 */
.filter-item.exclusive {
  background-color: #f5f5f5;
  color: var(--td-text-color-secondary);
}

.filter-item.exclusive.active {
  background-color: var(--td-filter-exclusive-bg);
  color: var(--td-filter-exclusive-color);
  font-weight: 500;
}

/* 重置按钮 */
.filter-reset-btn {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.filter-reset-btn text {
  font-size: 28rpx;
  color: var(--td-text-color-secondary);
  padding: 10rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
}

/* 内容区域 - 默认高度45vh */
.content-section {
  width: 100%;
  height: 45vh;
  flex-shrink: 0;
  background-color: #fff;
  position: relative;
  z-index: 10;
}

.custom-tabs {
  height: 100%;
}

/* 地图样式 */
.map-container {
  width: 100%;
  height: calc(45vh - 96rpx); /* 减去tab高度 */
  position: relative;
}

map {
  width: 100%;
  height: 100%;
}

.reset-btn {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 50;
}

.loading-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 50;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 20rpx;
  border-radius: 12rpx;
}

.loading-text {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: var(--td-text-color-secondary);
}

/* 列表样式 */
.points-list {
  height: calc(45vh - 96rpx); /* 减去tab高度 */
  padding: 20rpx;
  box-sizing: border-box;
}

.point-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.point-item.active {
  background-color: #f0f9f0;
  border-left: 8rpx solid var(--td-brand-color);
}

.point-name {
  font-size: 32rpx;
  color: var(--td-text-color-primary);
  display: flex;
  align-items: center;
}

.point-index {
  display: inline-block;
  color: var(--td-brand-color);
  font-weight: bold;
  margin-right: 8rpx;
  min-width: 30rpx;
  text-align: center;
}

.empty-list {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: var(--td-text-color-secondary);
  font-size: 30rpx;
}

/* 详情区域 - 剩余空间 */
.detail-section {
  flex: 1;
  width: 100%;
  background-color: #f6f6f6;
  z-index: 5;
  overflow-y: auto;
  height: 45vh;
  flex-shrink: 0;
  background-color: #fff;
  position: relative;
}

.detail-container {
  padding: 30rpx;
}

.detail-header {
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.detail-title {
  font-size: 36rpx;
  font-weight: 500;
  color: var(--td-text-color-primary);
}

.detail-content {
  padding: 10rpx 0;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.detail-text {
  margin-left: 16rpx;
  font-size: 30rpx;
  color: var(--td-text-color-secondary);
}

.detail-intro {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: var(--td-text-color-secondary);
  line-height: 1.5;
}

.empty-detail {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: var(--td-text-color-secondary);
  font-size: 30rpx;
}

/* 可点击元素 */
.clickable {
  color: #2d8cf0;
}

/* 点位标签样式 */
.point-tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 8rpx;
  gap: 8rpx;
}

.point-tag {
  font-size: 22rpx;
  padding: 4rpx 10rpx;
  background-color: var(--td-brand-color-light);
  color: var(--td-brand-color);
  border-radius: 4rpx;
  max-width: 120rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 详情标签样式 */
.detail-tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
  gap: 12rpx;
}

.detail-tag {
  font-size: 24rpx;
  padding: 6rpx 14rpx;
  background-color: var(--td-brand-color-light);
  color: var(--td-brand-color);
  border-radius: 8rpx;
}

/* 聚合点列表相关样式 */
.cluster-list {
  background-color: #fff;
}

.cluster-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.cluster-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--td-text-color-primary);
}

.cluster-exit-btn {
  display: flex;
  align-items: center;
  color: var(--td-text-color-secondary);
  font-size: 28rpx;
}

.cluster-exit-btn text {
  margin-left: 4rpx;
}

.cluster-item {
  padding: 16rpx 20rpx;
}

/* 导航按钮样式 */
.navigation-container {
  margin: 24rpx 0;
  display: flex;
}

.navigation-pill {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--td-brand-color);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 地图控制按钮 */
.map-controls {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  z-index: 100;
}

.map-control-btn {
  margin: 5rpx;
  padding: 5rpx 10rpx;
  font-size: 24rpx;
  background-color: rgba(255, 255, 255, 0.8);
  color: #333;
  border: 1px solid #ccc;
  border-radius: 4rpx;
}

.zoom-controls {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 5rpx;
}

.zoom-text {
  font-size: 24rpx;
  color: #333;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 0 10rpx;
  margin: 0 5rpx;
  line-height: 1.4;
  border-radius: 4rpx;
}